<div class="contact-warpper">
    <div class="contact">
        <h1>お問い合わせ</h1>
    </div>
    <%= form_for @contact, url: confirm_contacts_path do |f| %>
        <div class="contact-form">
            <%= f.label :name, class:"contact-label" %><br>
            <%= f.text_field :name, class:"contact-label" %><br>
            <% @contact.errors.full_messages_for(:name).each do |message| %>
                <div class="error">*<%= message %></div>
            <% end %>

            <%= f.label :email, class:"contact-label" %><br>
            <%= f.text_field :email, class:"contact-label" %><br>
            <% @contact.errors.full_messages_for(:email).each do |message| %>
                <div class="error">*<%= message %></div>
            <% end %>

            <%= f.label :telephone, class:"contact-label" %><br>
            <%= f.text_field :telephone, class:"contact-label" %><br>
            <% @contact.errors.full_messages_for(:telephone).each do |message| %>
                <div class="error">*<%= message %></div>
            <% end %>

            <%= f.label :content_inquiry, class:"contact-label" %><br>
            <%= f.text_area :content_inquiry, class:"contact-label" %>
            <% @contact.errors.full_messages_for(:content_inquiry).each do |message| %>
                <div class="error">*<%= message %></div>
            <% end %>

        </div>
        <%= f.button "確認画面へ", class:"confrim_btn" %>
    <% end %>
</div>