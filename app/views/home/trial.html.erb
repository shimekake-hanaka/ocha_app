            <div class="trial_btn">
                <%= link_to "体験予約はこちらから", new_reserf_path %>
            </div>
            <div class="trial_btn">
                <%= link_to "お問い合わせはこちらから", new_contact_path %>
            </div>
        </div>
    </div>
    <div class="">
        <h3 class="letter_spacing_md mt_10">～体験稽古/料金～</h3>
            <div class="pd_5 pd_0_sp">
                <table class="table mg_0">
                    <tr>
                    <th>1回　(約90分)</th>
                    </tr>
                    <tr>
                    <td>2000円</td>
                    </tr>
                </table>
            </div>
    </div>
</div>

<script>
    $(window).on('load', function () {
        setTimeout(function () {
            $('#triallImg').fadeIn(2000);
        },);
    });

    $(function() {
        $('header').show();
    });

</script>
